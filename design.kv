#:import chex kivy.utils.get_color_from_hex


MainWindow:

    canvas.before:
        Color:
            rgba : chex('b98d8f')
        Rectangle:
            pos: self.pos
            size : self.size

    content : content
    display_talking : display_talking

    ScrollView:
        size_hint : None, None
        size : root.size[0] * 0.72 , root.size[1] * 0.23
        pos : root.size[0] * 0.255 , root.size[1] * 0.03

        canvas.before:
            Color:
                rgba : chex('efefee')
            RoundedRectangle:
                pos : self.pos
                size : self.size
                radius : ( min(self.size) *0.24,)

        MDGridLayout:
            adaptive_height: True
            cols : 1
            padding : [ dp(15) , dp(10) , dp(5) , dp(10) ]

            AIContentLabel:
                id : display_talking

    ContentWindow:
        id : content
        size_hint : None , None
        size : root.size[0] * 0.75 , root.size[1] * 0.70
        pos : root.size[0] * 0.24, root.size[1] * 0.28

        canvas.before:
            Color:
                rgba : chex('#620609')
            RoundedRectangle:
                pos: self.pos
                size : self.size
                radius : ( min(self.size) * 0.030 ,)


# ------------------- Screen Holder ------------
<ContentWindow>:

# ------------------- Additional Widgets ----------
<AIContentLabel@MDLabel>:
    color : "black"
    font_name : "ai_font"
    font_size : min(root.parent.parent.size) * 0.15
    size_hint : 1 , None
    height : self.texture_size[1]
    markup : True
    halign : 'left'
    valign: 'top'

