<NavigationButton>:
    font_name : "content_font"
    background_down : ""
    background_color : 0, 0 , 0, 0
    size_hint : 1 , None
    font_name : "title_font" if self.isSelected else "content_font"
    color : self.activity_colors['selected'][1] if self.isSelected else self.activity_colors['unselected'][1]
    on_parent:
        self.font_size = ( min(self.size) * 0.67 ) - ( len(self.text) * 0.43) if len(self.text) > 10 else (min(self.size) * 0.5 )
        self.height = min(self.parent.parent.size) * 0.15 if self.parent else dp(100)
    on_size:
        self.font_size = ( min(self.size) * 0.67 ) - ( len(self.text) * 0.43) if len(self.text) > 10 else (min(self.size) * 0.5 )
        self.height = min(self.parent.parent.size) * 0.15


    canvas.before:
        Color:
            rgba : self.activity_colors['selected'][0] if self.isSelected else self.activity_colors['unselected'][0]
        RoundedRectangle:
            pos : self.pos
            size : self.size
            radius : ( min(self.size) * 0.6, )

    on_release:
        self.command()


