                    self.font_size = ( min(self.size) * 0.5 ) - ( len(self.text) * 0.3) if len(self.text) > 10 else (min(self.size) * 0.5 )

                on_release:
                    root.dropdown_list.open(*args)


        # -------> Time Picker
        BoxLayout:
            size_hint : 1 , 0.4
            orientation : 'vertical'

            BoxLayout:
                size_hint : 1 , 0.6

                AddFacultyScheduleModalViewLabel:
                    text : "START TIME"

                AddFacultyScheduleModalViewLabel:
                    text : "END TIME"

            BoxLayout:
                size_hint : 1 , 0.4
                padding : [ dp(20) , dp(0) , dp(20) , dp(0) ]
                spacing : dp(30)

                FacultyTimePickerButton:
                    text : root.time_start
                    size_hint : 0.5 , 1
                    text : root.start_time

                    on_release:
                        root.time_selections.start_time_picker.open()

                FacultyTimePickerButton:
                    text : root.time_start
                    size_hint : 0.5 , 1
                    text : root.end_time

                    on_release:
                        root.time_selections.end_time_picker.open()

        # -------> Day Picker
        FloatLayout :
            size_hint : 1 , 0.2

            MDFillRoundFlatButton:
                id : day_selection
                pos_hint : { 'center_x' : 0.5 , 'center_y' : 0.5 }
                size_hint : 0.5 , 0.7
                md_bg_color : chex('7f0f0f')
                text : "Select Day"
                font_name : "title_font"

                on_parent:
                    self.font_size = ( min(self.size) * 0.5 ) - ( len(self.text) * 0.3) if len(self.text) > 10 else (min(self.size) * 0.5 )
                on_size:
                    self.font_size = ( min(self.size) * 0.5 ) - ( len(self.text) * 0.3) if len(self.text) > 10 else (min(self.size) * 0.5 )

                on_release:
                    root.days_dropdown_list.open(*args)

        # -------> Adding Button and Cancel Button
        BoxLayout:
            size_hint : 1 , 0.2

            on_parent :
                self.padding = min(self.size) * 0.2
                self.spacing = min(self.size) * 0.3
            on_size :
                self.padding = min(self.size) * 0.2
                self.spacing = min(self.size) * 0.3

            ChangeFacultyInfoModalViewButtonUpdate:
                on_release:
                    root.updatingNewSchedule()

            ChangeFacultyInfoModalViewButtonCancel:
                on_release:
                    root.closeModal()


